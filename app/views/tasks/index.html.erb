<h1>Your tasks</h1>
<ul>
  <% @tasks.each do |task| %>
  <li> <%= task.completed %> <%= link_to task.title, task_path(task) %>
   <%= link_to "Delete", delete_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></li>
  <% end %>
</ul>
<%= link_to "Add a new task", new_path %>
